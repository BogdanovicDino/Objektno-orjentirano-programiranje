class HandEvaluation
{
    public static JambScoreType EvaluateHand(Jamb_hand hand)
    {
        int[] diceValues =hand.GetAsArray();
        Array.Sort(diceValues);

        if (    diceValues[0] == diceValues[1] &&
                diceValues[0] == diceValues[2] &&
                diceValues[0] == diceValues[3] &&
                diceValues[0] == diceValues[4] &&
                diceValues[0] == diceValues[5] )
        {
            return JambScoreType.Jamb;
        }
        else if (diceValues[5] > diceValues[4] &&
                diceValues[4] > diceValues[3] &&
                diceValues[3] > diceValues[2] &&
                diceValues[2] > diceValues[1] &&
                diceValues[1] > diceValues[0] )
                 
        {
            return JambScoreType.Skala;
        }
        else
        {
            return JambScoreType.Nista;
        }
    }
}



















PRVI:
using System;



class Kockica
{
   private int brojStranica;
   private int trenutnaVrijednost;
   private Random nasumična = new Random();


    public Kockica(int brojStranica, int trenutnaVrijednost, Random rand)
    {
        this.brojStranica = brojStranica;
        this.trenutnaVrijednost = trenutnaVrijednost;
        this.nasumična = rand;
    }


    public Kockica()
    {
        this.brojStranica = 6;
        this.trenutnaVrijednost = 1;
        this.nasumična = new Random();
    }

    public void postaviVrijednost(int vrijednost)
    {
        if (vrijednost > brojStranica )
        { trenutnaVrijednost = brojStranica; }
        else if(vrijednost < 1)
        { trenutnaVrijednost = 1; }
        else
        { trenutnaVrijednost = vrijednost; }
    }


    public int Roll()
    {
        trenutnaVrijednost = nasumična.Next(1, brojStranica + 1);  // brojsStranica+1 jer je gornja granica isključiva 
        return trenutnaVrijednost;
    }


    public int GetSideCount()
    {
        return brojStranica;
    }


    public int GetRolledNumber()
    {
        return trenutnaVrijednost;
    }

    public void SetRolledNumber(int vrijednost)
    {
        postaviVrijednost(vrijednost);
    }



    public double RunExperiment()
    {
        int brojBacanja = 100;
        int targetValue = 3;
        Kockica kocka = new Kockica();

        int countTarget = 0;
                for (int i = 0; i < brojBacanja; i++)
        {
            kocka.Roll();
                        if (kocka.GetRolledNumber() == targetValue)
            {
                countTarget++;
            }
        }
        return ((double)countTarget / brojBacanja) * 100;
    }

    public double RunExperiment(int brojBacanja, int targetValue)
    {
        Kockica kocka = new Kockica(20,1, new Random());
        int countTarget = 0;
                for (int i = 0; i < brojBacanja; i++)
        {
            kocka.Roll();
                        if (kocka.GetRolledNumber() == targetValue)
            {
                countTarget++;
            }
        }
        return ((double)countTarget / brojBacanja)*100;
    }





    public static void RunDemo()
 {
    Kockica first = new Kockica();
    Kockica second = new Kockica(20, 6, new Random());
     Console.WriteLine($"First die: {first.GetSideCount()}, rolled: {first.GetRolledNumber()}");
    Console.WriteLine($"First die: {second.GetSideCount()}, rolled: {second.GetRolledNumber()}");
     first.SetRolledNumber(6);
    second.SetRolledNumber(99);
     Console.WriteLine($"First die: {first.GetSideCount()}, rolled: {first.GetRolledNumber()}");
     Console.WriteLine($"First die: {second.GetSideCount()}, rolled: {second.GetRolledNumber()}");
    first.Roll();
    second.Roll();
    Console.WriteLine($"First die: {first.GetSideCount()}, rolled: {first.GetRolledNumber()}");
    Console.WriteLine($"First die: {second.GetSideCount()}, rolled: {second.GetRolledNumber()}");


        Console.WriteLine($"Da bi se dobio broj 3 na standardnoj kockici, vjerojatnost je priblizna {first.RunExperiment()}");
        Console.WriteLine($"Da bi se dobio broj 7 na kockici sa 20 strana , vjerojatnost je priblizna {second.RunExperiment(1000, 7)}");

        Console.WriteLine($"Broj stranica kocke koristene u drugom eksperimentu je {second.GetSideCount()} a trazena vrijednost bila je 7");
 }



}

class Program
{
    static void Main()
    {
        Kockica.RunDemo();
    }
}
