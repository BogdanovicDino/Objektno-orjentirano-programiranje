using System;
using System.ComponentModel.Design;
using System.Diagnostics.Metrics;


public enum JambScoreType
{
    Jamb,
    Skala,
    Nista
}



class Dice
{
    int state = 0;
    int sides = 6;
    Random rand = new Random();
    int currentValue=1;
    public void Roll()
    {
       currentValue=rand.Next(1, sides + 1);
    }




    public int CurrentValue
    {
        get { return currentValue; }
        set { currentValue = value; }
    }


    public int Getstate()
            {
        return state;
    }

    public void Lock()
    {
        state = 1;
    }
}



class Jamb_hand
{
    Dice dice1 = new Dice();
    Dice dice2 = new Dice();
    Dice dice3 = new Dice();
    Dice dice4 = new Dice();
    Dice dice5 = new Dice();
    Dice dice6 = new Dice();



    public int GetDiceValue(int diceNumber)
    {
        switch(diceNumber)
        {
            case 1:
                return dice1.CurrentValue;
            case 2:
                return dice2.CurrentValue;
            case 3:
                return dice3.CurrentValue;
            case 4:
                return dice4.CurrentValue;
            case 5:
                return dice5.CurrentValue;
            case 6:
                return dice6.CurrentValue;
            default:
                Console.WriteLine("Invalid dice number.");
                return -1;
        }
    }
    public void RollAllUnlockedDice()
    {
        if(dice1.Getstate() == 0)
             dice1.Roll();
        if(dice2.Getstate() == 0)
            dice2.Roll();  
        if(dice3.Getstate() == 0)
             dice3.Roll();
        if(dice4.Getstate() == 0)
             dice4.Roll();
        if(dice5.Getstate() == 0)
             dice5.Roll();
        if(dice6.Getstate() == 0)
             dice6.Roll();
    }

    public void PrintDiceValues()
    {
        Console.WriteLine("Dice values: {0}, {1}, {2}, {3}, {4}, {5}",
            dice1.CurrentValue,
            dice2.CurrentValue,
            dice3.CurrentValue,
            dice4.CurrentValue,
            dice5.CurrentValue,
            dice6.CurrentValue);
    }
    public void lockDice(int diceNumber)
    {
        switch(diceNumber)
        {
            case 1:
                dice1.Lock();
                break;
            case 2:
                dice2.Lock();
                break;
            case 3:
                dice3.Lock();
                break;
            case 4:
                dice4.Lock();
                break;
            case 5:
                dice5.Lock();
                break;
            case 6:
                dice6.Lock();
                break;
            default:
                Console.WriteLine("Invalid dice number.");
                break;
        }
    }

    public int Summe()
    {
        return dice1.CurrentValue + dice2.CurrentValue + dice3.CurrentValue +
               dice4.CurrentValue + dice5.CurrentValue + dice6.CurrentValue;
    }




    public int[] GetAsArray()
    {
        int [] array = new int[6];
        array[0] = dice1.CurrentValue;
        array[1] = dice2.CurrentValue;
        array[2] = dice3.CurrentValue;
        array[3] = dice4.CurrentValue;
        array[4] = dice5.CurrentValue;
        array[5] = dice6.CurrentValue;

        return array;
    }
        
}




